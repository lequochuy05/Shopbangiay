<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/textOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã đơn: #12345"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@android:color/black"/>

        <!-- Trạng thái đơn hàng -->
        <TextView
            android:id="@+id/textOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Chờ xác nhận"
            android:textSize="@dimen/text_size_small"
            android:textColor="@android:color/darker_gray"/>

        <!-- Tổng tiền -->
        <TextView
            android:id="@+id/textTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 500.000 đ"
            android:textSize="@dimen/text_size_small"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/buttonCancelOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủy đơn"
                android:textSize="12sp"
                android:backgroundTint="@android:color/holo_red_light"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/buttonUpdateStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cập nhật"
                android:textSize="12sp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
