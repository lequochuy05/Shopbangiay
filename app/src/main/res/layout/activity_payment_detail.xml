<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".activity.PaymentDetailActivity">

    <TextView
        android:layout_marginTop="72dp"
        android:id="@+id/paymentTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chọn phương thức thanh toán"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <ImageView
        android:id="@+id/paymentImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/paymentTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/paymentDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thông tin thanh toán..."
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/paymentImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <Button
        android:id="@+id/confirmPaymentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận thanh toán"
        android:textSize="18sp"
        android:background="@drawable/btn_intro"
        android:textColor="@color/white"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/paymentDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
